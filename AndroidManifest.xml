<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.openpizza.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.openpizza.android.views.ShopOverview"
            android:label="@string/title_activity_shop_overview" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.openpizza.android.views.ShopView"
            android:label="@string/title_activity_shop_view" >
        </activity>
        <activity
            android:name="de.openpizza.android.ProductView"
            android:label="@string/title_activity_product_view" >
        </activity>
    </application>

</manifest>
