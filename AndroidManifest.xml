<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.openpizza.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.openpizza.android.views.ShopOverview"
            android:label="@string/title_activity_shop_overview" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.openpizza.android.views.antihost.ShopViewAntihost"
            android:label="@string/title_activity_shop_view" >
        </activity>
        <activity
            android:name="de.openpizza.android.views.host.ShopViewHost"
            android:label="@string/title_activity_shop_view" >
        </activity>
        <activity
            android:name="de.openpizza.android.views.host.ShopViewHostEdit"
            android:label="@string/title_activity_shop_view" >
        </activity>
        <activity
            android:name="de.openpizza.android.views.ProductView"
            android:label="@string/title_activity_product_view" >
        </activity>
        <activity
            android:name="de.openpizza.android.views.antihost.OrderActivityAntihost"
            android:label="@string/title_activity_order" >
        </activity>
        <activity
            android:name="de.openpizza.android.views.host.OrderActivityHost"
            android:label="@string/title_activity_shop_view" >
        </activity>
        <activity
            android:name="de.openpizza.android.views.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="de.openpizza.android.views.SendOrderActivity"
            android:label="@string/title_activity_send_order" >
        </activity>
        <activity
            android:name="de.openpizza.android.LinkActivity"
            android:label="@string/title_activity_link" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.LAUNCHER" />

                <data android:scheme="openpizza" />
            </intent-filter>
        </activity>
    </application>

</manifest>